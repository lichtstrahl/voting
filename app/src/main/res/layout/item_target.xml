<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/margin_list_item_v"
    android:layout_marginBottom="@dimen/margin_list_item_v">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/viewTargetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/viewTargetVote"
            android:textStyle="bold"
            android:textSize="20sp"
            android:lines="1"
            tools:text="@tools:sample/first_names"/>

        <TextView
            android:id="@+id/viewTargetDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/viewTargetVote"
            android:lines="1"
            android:layout_below="@id/viewTargetName"
            tools:text="@tools:sample/full_names"/>

        <TextView
            android:id="@+id/viewTargetVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="25sp"
            tools:text="9999"
            android:layout_alignTop="@id/viewTargetName"
            android:layout_alignBottom="@id/viewTargetDesc"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>